<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Cognizant.UI.Components.Resource.Style"
    xmlns:ff="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms">

    <x:Double
        x:Key="HeaderHeigthAndroid">56</x:Double>
    <x:Double
        x:Key="HeaderHeigthIos">56</x:Double>

    <x:Double
        x:Key="HeaderHeigthModalViewAndroid">83</x:Double>
    <x:Double
        x:Key="HeaderHeigthModalViewIos">83</x:Double>
    
    <Style
        TargetType="StackLayout"
        x:Key="MainStackLayout">
        <Setter
            Property="Margin">
            <OnPlatform
                x:TypeArguments="Thickness">
                <On
                    Platform="iOS"
                    Value="0,40,0,0" />
            </OnPlatform>
        </Setter>
    </Style>

    <Style
        TargetType="Grid"
        x:Key="MainGrid">
        <Setter
            Property="Margin">
            <OnPlatform
                x:TypeArguments="Thickness">
                <On
                    Platform="iOS"
                    Value="0,40,0,0" />
            </OnPlatform>
        </Setter>
    </Style>

    <OnPlatform
        x:TypeArguments="GridLength"
        x:Key="HeaderHeight">
        <On
            Platform="iOS"
            Value="{StaticResource HeaderHeigthIos}" />
        <On
            Platform="Android"
            Value="{StaticResource HeaderHeigthAndroid}" />
    </OnPlatform>

    <OnPlatform
        x:TypeArguments="GridLength"
        x:Key="HeaderHeightModalView">
        <On
            Platform="iOS"
            Value="{StaticResource HeaderHeigthModalViewIos}" />
        <On
            Platform="Android"
            Value="{StaticResource HeaderHeigthModalViewAndroid}" />
    </OnPlatform>

    <OnPlatform
        x:TypeArguments="x:String"
        x:Key="PreciousSansTwoMedium">
        <On
            Platform="iOS"
            Value="PreciousSansTwo-Medium" />
        <On
            Platform="Android"
            Value="Precious-Sans-Two-Medium.otf#☞" />
    </OnPlatform>

    <OnPlatform
        x:TypeArguments="x:String"
        x:Key="PreciousSansTwoBold">
        <On
            Platform="iOS"
            Value="PreciousSansTwo-Bold" />
        <On
            Platform="Android"
            Value="Precious-Sans-Two-Bold.otf#☞" />
    </OnPlatform>

    <OnPlatform
        x:TypeArguments="x:String"
        x:Key="InterstateRegular">
        <On
            Platform="iOS"
            Value="Interstate-Regular" />
        <On
            Platform="Android"
            Value="Interstate-Regular.ttf#Interstate-Regular" />
    </OnPlatform>

    <OnPlatform
        x:TypeArguments="x:String"
        x:Key="InterstateLight">
        <On
            Platform="iOS"
            Value="Interstate-Light" />
        <On
            Platform="Android"
            Value="Interstate-Light.ttf#Interstate-Light" />
    </OnPlatform>

    <OnPlatform
        x:TypeArguments="x:String"
        x:Key="InterstateBold">
        <On
            Platform="iOS"
            Value="Interstate-Bold" />
        <On
            Platform="Android"
            Value="Interstate-Bold.ttf#Interstate-Bold" />
    </OnPlatform>

